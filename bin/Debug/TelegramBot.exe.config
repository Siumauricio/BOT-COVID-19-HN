<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net" />
  </configSections>
  <log4net>
    <!--what we want to log to, log to a file -->
    <appender name="RollingFileAppender" type="log4net.Appender.RollingFileAppender">
      
      <!--where we are making ur logs-->
      <file value="C:\Users\JOHNNIE\source\repos\TelegramBot\TelegramBot\logs\Log4Net.txt"/>
      <appendToFile value="true" />
      <!--If we want certain size of the apenders
      -->
      <rollingStyle value="Size" />
      <staticLogFileName value="true" />
      <maximumFileSize value="3KB" />
      <maxSizeRollBackups value="10" />
      <lockingModel type="log4net.Appender.FileAppender+MinimalLock" />
      
      <!--Layouts of how we whant our logs to look like-->
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date [%logger] %level - %message%newline%exception" />
      </layout>
      
      \
    </appender>
    
    <!--there are 5 levels (DEBUG,INFO,WARN,ERROR,FAIL) what type of log we want to have, we can also use ALL or OFF-->
    <root>
      <level value="All" /> 
      <appender-ref ref="RollingFileAppender" />
    </root>
  
  </log4net>

  <startup> 
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.7.2" />
    </startup>
  <runtime>
    <assemblyBinding xmlns="urn:schemas-microsoft-com:asm.v1">
      <dependentAssembly>
        <assemblyIdentity name="Newtonsoft.Json" publicKeyToken="30ad4fe6b2a6aeed" culture="neutral" />
        <bindingRedirect oldVersion="0.0.0.0-12.0.0.0" newVersion="12.0.0.0" />
      </dependentAssembly>
    </assemblyBinding>
  </runtime>
</configuration>